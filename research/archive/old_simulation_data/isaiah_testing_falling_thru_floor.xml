
    <rigidbody2d_scene>
    
      <camera center="0 0" scale="8.3225" fps="50" render_at_fps="0" locked="0"/>
      <!--
        seems like for symplectic euler, energy is lost each collision
        (more specifically, velocity is lost on collision in purely elastic case!)
      -->
      <!-- <integrator type="symplectic_euler" dt="0.01"/> -->

      <!-- this seems to conserve momentum better -->
      <integrator type="verlet" dt="0.01"/>
      <!-- as we increase dt, the distance between the balls after collision increases -->
      <!-- <integrator type="verlet" dt="0.05"/> -->
    
      <impact_operator type="gr" CoR="1.0" v_tol="1.0e-9" cache_impulses="0">
        <!-- <solver name="policy_iteration" max_iters="100" tol="1.0e-8"/> -->
        <solver name="ipopt" linear_solvers="ma27 ma86" tol="1.0e-12"/>
      </impact_operator>
    
      <near_earth_gravity f="0.0 -10.0"/>
    
      <static_plane x="0.0 0.0" n="0.0 1.0"/>

      <geometry type="circle" r="1.0"/>

      <rigid_body x="0.0 1.0" theta="0.0" v="0.0 0.0" omega="0" rho="1.0" geo_idx="0"/>
    
    </rigidbody2d_scene>
    