  <integrator type="verlet" dt="0.001"/>

  <gravity fx="0.0" fy="-10.0"/>

  <static_plane x="0.0 -10.0" n="0.0 1.0"/>
  <static_plane x="-10.0 0.0" n="1.0 0.0"/>
  <static_plane x=" 10.0 0.0" n="-1.0 0.0"/>

</ball2d_scene>
